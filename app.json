{
  "name": "JustMatch API",
  "description": "Match users that need small tasks performed with other users skills.",
  "repository": "https://github.com/justarrived/just_match_api",
  "keywords": [],
  "env": {
    "RAILS_ENV": "production",
    "SECRET_KEY_BASE": {
      "description": "Rails secret token",
      "generator": "secret"
    },
    "SENDGRID_USERNAME": {
      "description": "SendGrid username",
      "value": "",
      "required": false
    },
    "SENDGRID_PASSWORD": {
      "description": "SendGrid password",
      "value": "",
      "required": false
    },
    "MAPBOX_ACCESS_TOKEN": {
      "description": "Access token for Mapbox used in the admins tools",
      "value": "",
      "required": false
    }
  },
  "addons": ["sendgrid:starter", "scheduler:standard", "heroku-redis:hobby-dev"],
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate db:seed"
  }
}
